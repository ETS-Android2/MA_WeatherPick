<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvReviewListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/tvReviewListRating"
        android:layout_width="241dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:isIndicator="true"
        android:progressTint="#FFEB3B"
        app:layout_constraintStart_toStartOf="@+id/tvReviewListDate"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewListDate" />

    <TextView
        android:id="@+id/tvReviewListDate"
        android:layout_width="64dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tvReviewListName"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewListName" />

    <ImageView
        android:id="@+id/ivReviewList"
        android:layout_width="102dp"
        android:layout_height="107dp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvReviewListName"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>